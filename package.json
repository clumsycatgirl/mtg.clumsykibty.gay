{
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "build:css": "npx postcss app/public/assets/css/**/*.css -d app/public/assets/dist/css",
    "watch": "npx onchange './app/public/assets/css/**/*.css' './app/app/views/**/*.php' -- npm run build:css"
  },
  "dependencies": {
    "autoprefixer": "^10.4.17",
    "preline": "^2.0.3",
    "tailwindcss": "^3.4.1"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "onchange": "^7.1.0",
    "postcss": "^8.4.39",
    "postcss-cli": "^11.0.0"
  }
}
